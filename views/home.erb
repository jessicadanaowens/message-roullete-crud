<form method="post" action="/messages">
  <label for="message">Message:</label>
  <textarea type="text" col="40" row="5" id="message" name="message"></textarea><br>
  <button>Submit</button>
</form>



<% messages.each do |message| %>

  <li><%= message["message"] %></li>
  <a href="/messages/<%= message["id"]%>/edit">Edit Message</a>

  <form method="post" action="/messages/<%= message["id"] %>">
    <input type="hidden" name="_method" value="delete"/>
    <input type="submit" value="Delete Message"/>
  </form>

  <form method="post" action="/messages/<%= message["id"] %>/comment">
    <label for=comment>Comment</label>
    <input type=text id=comment name=comment >
    <input type=submit value=Submit>
  </form>

<% end %>

